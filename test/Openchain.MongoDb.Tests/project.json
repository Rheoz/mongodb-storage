{
  "version": "0.2.0",
  "description": "Unit tests for the Openchain.MongoDb package.",
  "authors": [ "Frédéric Luce" ],
  "copyright": "Copyright © 2016",

  "buildOptions": {
    "allowUnsafe": false,
    "warningsAsErrors": true
  },

  "packOptions": {
    "projectUrl": "https://github.com/openchain/mongodb-storage",
    "licenseUrl": "https://www.apache.org/licenses/LICENSE-2.0",
    "iconUrl": "https://www.openchain.org/package.png"
  },

  "dependencies": {
    "Microsoft.Extensions.DependencyInjection": "1.0.0",
    "Microsoft.Extensions.Logging.Console": "1.0.0",
    "Openchain.Abstractions.Tests": "0.7.0",
    "Openchain.Infrastructure.Tests": "0.7.0",
    "xunit": "2.2.0-beta2-build3300",
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "Openchain.MongoDb": "0.2.0"
  },

  "testRunner": "xunit",

  "commands": {
    "test": "xunit.runner.dnx"
  },

  "frameworks": {
    "netcoreapp1.5": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "type": "platform",
          "version": "1.1.0"
        }
      },
      "imports": [ "dnxcore50", "portable-net45+win8" ]
    }
  }
}
